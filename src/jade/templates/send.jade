mixin send
  .send-form
    h2.text-center Send Email
    .form-bg
      form.send
        .form-group
          .input-group
            span.input-group-addon
              span.glyphicon.glyphicon-user
            input(type="text" class="form-control" placeholder="Your Name")
        .form-group
          .input-group
            span.input-group-addon
              span.glyphicon.glyphicon-envelope
            input(type="email" class="form-control" placeholder="Your Email")
        .form-group
          textarea(class="form-control" rows="13" placeholder="Type your message...")
        +accept('send-check', 'Send a copy to my Email', 'Send Email')