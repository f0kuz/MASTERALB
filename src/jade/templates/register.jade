mixin register
  .register-form
    h2.text-center Register Form
    .form-bg
      form.register
        .form-group
          .input-group
            span.input-group-addon
              span.glyphicon.glyphicon-user
            input(type="text" class="form-control" placeholder="Username")
        .form-group
          .input-group
            span.input-group-addon
              span.glyphicon.glyphicon-lock
            input(type="password" class="form-control" placeholder="Password" required)
        .form-group
          .input-group
            span.input-group-addon
              span.glyphicon.glyphicon-lock
            input(type="password" class="form-control" placeholder="Confirm password" required)
        .form-group
          .input-group
            span.input-group-addon
              span.glyphicon.glyphicon-envelope
            input(type="Email" class="form-control" placeholder="Email")
        .form-group
          .input-group
            span.input-group-addon
              span.glyphicon.glyphicon-map-marker
            select(class="form-control")
              option(value="") Your Location
              option(value="Andromeda") Andromeda
              option(value="Kartagina") Kartagina
              option(value="Zegrze Płd.") Zegrze Płd.
        +accept('register-check', 'I have read and accept the terms of use', 'Sign up')